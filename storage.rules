rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to upload and read their own original images
    match /original-uploads/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow users to upload and read their own enhanced images
    match /enhanced-uploads/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
